<!doctype html>
<html>
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<header>
    <img src="public/amazing_logo.png" alt="Logo" style="width: 100px;">
    <h1>My super blog</h1>
</header>
<body>
    {{range .Posts}}
        <div>
            <h2><a href="/posts/{{.ID}}?page={{$.CurrentPage}}">{{.Title}}</a></h2>
        </div>
    {{else}}
        <p>Постов нет</p>
    {{end}}

    <div>
        {{if .HasPrevious}}
            <a href="/?page={{.PreviousPage}}">Previous</a>
        {{end}}
        {{if .HasNext}}
            <a href="/?page={{.NextPage}}">Next</a>
        {{end}}
    </div>
</body>
</html>
