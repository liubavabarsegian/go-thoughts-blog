<!doctype html>
<html>
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<header>
    <img src="/app/internal/assets/images/amazing_logo.png" alt="Logo" style="width: 100px;">
    <h1>My super blog</h1>
</header>
<body>
    {{range .}}
        <div>
            <h2>{{.Title}}</h2>

            <div id="post-{{.ID}}"></div>
            <p>
                <script>
                    document.getElementById("post-{{.ID}}").innerHTML =
                    marked.parse({{.Content}});
                </script>
            </p>
        </div>
    {{else}}
        <p>Постов нет</p>
    {{end}}

    <div>
        {{if .HasPrevious}}
            <a href="/?page={{.PreviousPage}}">Previous</a>
        {{end}}
        {{if .HasNext}}
            <a href="/?page={{.NextPage}}">Next</a>
        {{end}}
    </div>
</body>
</html>
