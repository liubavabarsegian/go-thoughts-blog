<!doctype html>
<html>
<script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
<head>
    <title>Посты</title>
</head>
<body>

    <h1>Список постов!</h1>
    {{range .}}
        <div>
            <h2>{{.Title}}</h2>

            <div id="post-{{.ID}}"></div>
            <p>
                <script>
                    document.getElementById("post-{{.ID}}").innerHTML =
                    marked.parse({{.Content}});
                </script>
            </p>
        </div>
    {{else}}
        <p>Постов нет</p>
    {{end}}
</body>
</html>
